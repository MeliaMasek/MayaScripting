                        //Calculator function

//Addition 1
global proc Addition(float $num1, float $num2, float $num3)
{
    float $add[] = {$num1, $num2, $num3};
    print (floatArrayToString($add, " + "));
    print (" = ");
    print ($num1 + $num2 + $num3);
    print ("\n");

}
print (Addition(70, 1, 1));


//Subtraction 2
global proc Subtraction(float $num1, float $num2, float $num3)
{
    float $sub[] = {$num1, $num2, $num3};
    print (floatArrayToString($sub, " - "));
    print (" = ");
    print ($num1 - $num2 - $num3);
    print ("\n");
}
print (Subtraction(25, 5, 5));


//Multiplication 3
global proc Multiplication(float $num1, float $num2, float $num3)
{
    float $multi[] = {$num1, $num2, $num3};
    print (floatArrayToString($multi, " * "));
    print (" = ");
    print ($num1 * $num2 * $num3);
    print ("\n");
}
print (Multiplication(5, 5, 1));


//Division 4
global proc Division(float $num1, float $num2, float $num3)
{
    float $div[] = {$num1, $num2, $num3};
    print (floatArrayToString($div, " / "));
    print (" = ");
    print ($num1 / $num2 / $num3);
    print ("\n");
}
print (Division(25, 5, 1));


//Power 5
global proc Power(float $num1, float $num2)
{
    float $powof = pow($num1, $num2);
    print ($num1 + " ^ " + $num2);
    print (" = ");
    print $powof;
    print ("\n");
}
print (Power(3, 2));


//Mean 6
global proc Mean(float $num1, float $num2, float $num3, float $num4)
{
    float $mean[] = {$num1, $num2, $num3, $num4};
    print (floatArrayToString($mean, " + "));
    print (" = ");
    print (($num1 + $num2 + $num3 + $num4) / 4);
    print ("\n");
}
print (Mean(40, 10, 50, 140));


//Median 7
global proc Median(float $num1, float $num2, float $num3, float $num4, float $num5)
{
    float $med[] = {$num1, $num2, $num3, $num4, $num5};
    print (sort($med));
    print ("The median of the inputed numbers is ");
    //print (sort());
    print ("\n");
}
print (Median(10, 1, 50, 25, 15));


//Calls on all functions

global proc Calculator(int $operation)
{
    if ($operation == 1)
    {
        Addition(2, 2, 1);
    }
    
    else if ($operation == 2 )
    {
       Subtraction(2, 2, 1);
    }
    
    else if ($operation == 3)
    {
        Multiplication(2, 2, 1);
    }
    
    else if ($operation == 4)
    {
        Division(2, 2, 1);
    }
    
    else if ($operation == 5 )
    {
        Power(2, 2);
    }
    
    else if ($operation == 6)
    {
        Mean(2, 2, 1, 4); 
    }
    
    else if ($operation == 7)
    {
        Median(2, 2, 1, 5, 8);
    }
    
    else
    {
        print ("Please input a valid operation type as a value, 1 though 7.");
    }
}
Calculator(7);